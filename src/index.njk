                    <h2 class="mt-4 md:text-lg" :class="darkMode ? 'text-gray-500' : 'text-gray-700'">I am a full-stack web developer with a lot of passion for what i'm doing!</h2>
                    <nav class="mt-8 flex justify-center">
                        <a href="#contact" class="text-sm px-4 py-3 rounded font-bold uppercase text-white" :class="darkMode ? 'bg-pink-600' : 'bg-purple-600' ">Contact</a>
                    </nav>
                </div>
            </section>
            <section class="py-16 border-b-2 border-t-2" :class="darkMode ? 'bg-gray-800 border-gray-700' : 'bg-gray-100'">
                <div class="mx-auto px-8 text-left md:text-center">
                    <h3 class="font-bold leading-tight text-2xl md:text-3xl">{{services.title}}</h3>
                    <p class="mt-2 max-w-lg md:mx-auto" :class="darkMode ? 'text-gray-500' : 'text-gray-700'">{{services.subtitle}}</p>
                </div>
                <div class="swiper-container mt-16 md:px-8 ">
                    <div class="swiper-wrapper pb-8 md:pb-0 md:grid md:gap-16 md:grid-cols-2">
                        {% for item in services.list %}
                            <div class="swiper-slide px-8 md:px-0">
                                <span class="font-bold">{{item.title}}</span>
                                <p class="mt-2 text-sm">{{item.content}}</p>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="swiper-pagination flex md:hidden"></div>
                </div>
            </section>

            <section  class="py-16">
                <h3 class="font-bold text-center text-2xl md:text-3xl px-8">{{timeline.title}}</h3>
                <div class="timeline mt-16">
                    <ul>
                        {% for item in timeline.list %}
                            <li class="py-8 ml-16 pl-16 pr-8 md:ml-0 md:pl-0 md:pr-0">
                                <span class="year text-sm md:text-base" :class="darkMode ? 'text-gray-500' : 'text-gray-700'">{{item.year}}</span>
                                <div class="company w-24 h-24 rounded-full bg-white border">
                                    <img class="xy-align w-9/12" src="{{item.logo}}" alt="{{item.alt}}"/>
                                </div>
                                <div class="content">
                                    <span class="font-bold">{{item.company}}</span>
                                    <p class="mt-2 text-sm">{{item.content}}</p>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </section>

            <section id="stack" class="px-8 md:px-0 py-16 text-center">
                <h3 class="font-bold leading-tight text-2xl md:text-3xl">My work companions</h3>
                <div class="mt-16 grid gap-16 grid-cols-2 grid-rows-3 md:grid-cols-3">
                    {% for item in stack %}
                        <div class="flex justify-center items-center">
                            <img src="{{item.img}}" class="transition-all duration-300 ease-in-out {{item.sizeClass}}" alt="Stack logo" data-tippy-content="{{item.tooltip}}" :data-tippy-theme="darkMode ? 'dark' : 'light' "/>
