            function darkMode() {
                var scheme = localStorage.getItem('colorScheme')
                if (scheme === 'dark') {
                    return {darkMode: true}
                }
                if (scheme === 'light') {
                    return {darkMode: false}
                }
                return {
                    darkMode: window
                        .matchMedia('(prefers-color-scheme: dark)')
                        .matches
                }
            }
        </script>
