        <main class="max-w-screen-md mx-auto">
            <section class="px-8 md:px-0 py-16 text-center">
                <figure class="block w-48 h-48 md:w-64 md:h-64 mx-auto rounded-full relative overflow-hidden">
                    <span class="absolute block t-0 l-0 w-full h-full opacity-25" :class="darkMode ? 'bg-pink-600' : 'bg-purple-600'"></span>
                    <img class="object-cover" src="./static/me.jpg" alt="My image">
                </figure>

                <div class="mt-8 md:mt-16 overflow-hidden">
                    <h1 class="font-bold text-3xl md:text-4xl">
                    Creating
                        <span class="relative block w-full py-4">
                            <span id="text-animation-fast" class="xy-align w-full">
                                <span class="inner inline-block w-full opacity-0">fast</span>
                            </span>
                            <span id="text-animation-beautiful" class="xy-align w-full">
                                <span class="inner inline-block w-full opacity-0">beautiful</span>
                            </span>
                            <span id="text-animation-scalable" class="xy-align w-full">
                                <span class="inner inline-block w-full opacity-0">scalable</span>
                            </span>
                            <span id="text-animation-optimized" class="xy-align w-full">
                                <span class="inner inline-block w-full opacity-0">optimized</span>
                            </span>
                        </span>
